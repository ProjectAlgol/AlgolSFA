<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/card_dashboard_item"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:cardCornerRadius="6dp"
        android:layout_margin="10dp"
        android:elevation="4dp"
        android:background="@color/matte_dark_black"
        android:onClick="onDashboardListItemClick">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_dashboard_item_icon"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.6"
                android:padding="6dp"
                android:src="@drawable/ic_home"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight=".6"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_dashboard_item_title"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1.2"
                    android:textStyle="bold"
                    android:text="Planned Visit"
                    android:gravity="center_vertical"
                    android:paddingLeft="5dp"
                    android:textSize="15sp"/>

                <TextView
                    android:id="@+id/tv_dashboard_item_description"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight=".8"
                    android:text="Take orders, make survey for pre planned outlets"
                    android:paddingLeft="5dp"/>
            </LinearLayout>

            <ImageView
                android:id="@+id/iv_dashboard_item_button_icon"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.8"
                android:src="@drawable/ic_navigate_next"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>
